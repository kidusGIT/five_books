<div class="width-large flex-row center-flex">
  <div class="width-md-1 flex-col flex-gap align-flex-start">
    <div class="flex-row flex-space-between width-large">
      <%= link_to "New book", new_book_path, class: 'btn btn-sm btn-dark' %>
      <div class="dropdown-center">
        <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-filter"></i> Filter Books
        </button>
        <ul class="dropdown-menu">
          <li> <%= link_to 'Not Sold', uploads_path(query: 'not-sold'), class:"dropdown-item" %> </li>
          <li> <%= link_to 'Sold out', uploads_path(query: 'sold'), class:"dropdown-item" %> </li>
          <li> <%= link_to 'All Books', uploads_path(query: 'all-books'), class:"dropdown-item" %> </li>
        </ul>
      </div>
    </div>
    <div class="width-large x-scrollable">
      <%= turbo_frame_tag 'book-table' do %>
        <%= render 'table', books: @books %>
      <% end %>
    </div>
  </div>
</div>
